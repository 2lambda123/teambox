-var type = self.type.toLowerCase();

input(name= 'utf8', type= 'hidden', value= '✓')

.field.text_area
  a.micro_avatar.my_avatar
  .textarea
    textarea(cols= '40', name= type + '[comments_attributes][0][body]', placeholder= 'Define what needs to be done, assign this task to somebody.', rows= '20', autocomplete= 'off')
    .autocomplete(style= 'display: none')

.extra(style= 'display: none')
  - if (self.is_task)
    .field.text_field.hours_field(style= 'display: none')
      label
        | How many hours did you put into this task?
        input(class= 'human_hours', name= type + '[comments_attributes][0][human_hours]', size= '30', type= 'text')
      a(href= 'http://help.teambox.com/faqs/advanced-features/time-tracking', target= '_blank') Learn more.

  .actions
    .attach
      span <%= t('comments.fields.attach')%>
      a(href= '#uploads', class= 'attach_icon hoverable', title= 'Attach a file') Attachment
      .google_docs_attachment
        a(href= '/google_docs', rel= 'facebox')
          img(alt= 'Icon_6_document', class= 'google_docs_logo', src= '/images/google_docs/icon_6_document.gif')
        .google_docs_attachment_form_area(data-object-name= type + '[comments_attributes][0]')
          .fields
          ul.file_list

      - if (self.is_task)
        a(href= '#hours', class= 'add_hours_icon hoverable', title= 'Log hours') Add hours to this task

      a(href= '#', class= 'add_watchers hoverable', title= 'Notify people') Watchers

    - if (self.is_task)
      .task_actions
        label(for= 'task_status') Status
        select#task_status(name= type + '[status]')

        label(for= 'task_assigned_id') Assigned to:
        select#task_assigned_id(name= type + '[assigned_id]')

        label(for= 'task_due_on') Due date
        .date_picker
          img(alt= 'Calendar', class= 'calendar_date_select_popup_icon', src= '/images/calendar_date_select/calendar.gif')
          input(id= 'task_due_on', name= type + '[due_on]', type= 'hidden')
          span(class= 'localized_date')
            i No date assigned
    - else
      span.convert_to_task
        a(href= '#convert_to_task') Convert to task

    span.new(style= 'display: none') ← &nbsp;&nbsp; Select <b>Notify people</b> to send notifications for this conversation.

  .submit
    span.help
      a(href= '/text_styles', class= 'style_icon', rel= 'facebox', title= 'Formatting help')
    input(name= 'commit', type= 'submit', value= 'Save')
