.conversation_actions
  .field.text_area
    a.micro_avatar.my_avatar
    .textarea
      textarea(cols= '40', name= 'comment[body]', placeholder= 'Define what needs to be done, assign this task to somebody.', rows= '20', autocomplete= 'off')
      .autocomplete(style= "display: none")

  .fields
    label.info_label(for= 'conversation_name') Name this task:
    input(class= 'required', error_message= 'must not be blank', id= 'conversation_name', name= 'name', placeholder= 'eg. Upload Logo Proposal', size= '30', type= 'text')

  != self.partial('partials.dropdown', {name: 'conversation_task_list_id', attr: 'task_list_id', placeholder: '', label_msg: '<%= t("conversations.convert_form.task_list") %>'})
  != self.partial('partials.dropdown', {name: 'conversation_status', attr: 'status', placeholder: '', label_msg: '<%= t("conversations.convert_form.status") %>:'})
  != self.partial('partials.dropdown', {name: 'conversation_assigned_id', attr: 'assigned_id', placeholder: '', label_msg: '<%= t("comments.new.assigned_to") %>:'})

  .fields
    .date_picker
      img(alt= 'Calendar', class= 'calendar_date_select_popup_icon', src= '/images/calendar_date_select/calendar.gif')
      input(id= 'conversation_due_on', name= 'due_on', type= 'hidden')
      span(class= 'localized_date')
        i No date assigned

.submit
  a(href= '#cancel_conversion', class= 'cancel') Cancel
  input(id= 'comment_submit', name= 'commit', type= 'submit', value= 'Convert')
