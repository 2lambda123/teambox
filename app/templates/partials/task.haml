.task{"data-task-id" => "{{id}}", :id => "task_{{id}}", :class => 'status_{{status_name}}' }
  .taskStatus
    <!-- <img src='drag.png' class='task_drag'/> if editable and !task.archived? -->
    %span.task_status.task_counter{"data-task-id" => "{{id}}"} {{comments_count}}
  .taskName
    %a.name{:href => "/projects/{{project_id}}/tasks/{{id}}"} {{name}}
    .expanded_actions{:style => "display: none"}
      %a.full{:href => "/projects/{{project_id}}/tasks/{{id}}"}= t('tasks.task.full_view')
      %a.hide{:href => "#"}= t('tasks.task.hide_comments')
    <!-- don't display due date if the task is closed -->
    {{#if due_on}}
    %span.assigned_date{ :style => 'display: inline-block' } {{date due_on}} 
    {{/if}}
    <!-- TODO: Use assigned user, display only for open tasks -->
    {{#assigned}}
    %span.assigned_user
      %a{:href => "/users/{{username}}"} {{short_name}}
    {{/assigned}}
    .extended
      %span.project
        %a{:href => "/projects/{{project_id}}"} {{project.name}}
        &rarr;
      %span.task_list
        %a{:href => "/projects/{{project_id}}/task_lists"} {{task_list.name}}
  .clear
  .thread{ :style => 'display: none' }
    .comments
      {{#first_comment}}{{> comment}}{{/first_comment}}
      {{#if hidden_comments_count}}
      .more_comments
        %a{ :href => "{{host}}/activities/{{id}}/show_thread?thread_type={{type}}", :'data-remote' => "true" }
        Show {{hidden_comments_count}} previous comments
      {{/if}}
      {{#recent_comments}}{{> comment}}{{/recent_comments}}
    {{> comment_form}}
