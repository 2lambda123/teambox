.comment{ :'data-editable-before' => "{{ms updated_at}}", :id => "comment_{{id}}",
    :'data-project' => "{{project_id}}", :'data-user' => "{{user_id}}" }
  .info
    {{#user}}
    %a.micro_avatar{ :href => "{{user_url}}",
      :style => "background: url({{micro_avatar_url}}) no-repeat" }
    {{/user}}
  .block
    .actions_menu
      .actiondate
        %time.timeago{ :'data-msec' => "{{ms updated_at}}", :pubdate => "true" }
          {{time_ago updated_at}}
      %img{:class => 'triangle', :src => '/images/triangle.png?1285939525', :alt => 'Triangle'}
      .extra
        %a.edit{:style => 'display:block;'} Edit
        %a.reply_email{:rel => 'facebox', :href => '#email_post_{{id}}'} Reply via email
        // TODO: this is harcode!
        %a.delete{:style => 'display:block;', :href => "/projects/test_project-20/conversations/129196/comments/1593438"} Delete
    .body.textilized
      .before

        {{#user}}
        %a.user{ :href => "{{user_url}}" }
          {{full_name}}
        {{/user}}

        {{transition_due_on due_on previous_due_on}}

        {{#context_if hours this}}
        %span.hours {{human_hours hours}}
        {{/context_if}}

        {{status_transition}}

      {{#assigned}}
      %p.assigned_transition Assigned to {{full_name user}}
      {{/assigned}}

      {{{body_html}}}
      <!-- TODO: google docs -->
  %div{:id => 'email_post_{{id}}', :style => 'width: 600px;display: none;'}
    %h1= t('.title')
    %p= t('.send_replies_with_this_email')
    %p= link_to "{{project.permalink}}+{{downcase target_type}}+{{target_id}}@#{Teambox.config.smtp_settings[:domain]}", "mailto:{{project.permalink}}+{{downcase target_type}}+{{target_id}}@#{Teambox.config.smtp_settings[:domain]}"
    %p= t('.teambox_magic_happens')

    %p= t('.other_shortcuts_available')
    %table{:style => 'width: 580px'}
      %tr
        %td= link_to "{{project.permalink}}+conversation@#{Teambox.config.smtp_settings[:domain]}", "mailto:{{project.permalink}}+conversation@#{Teambox.config.smtp_settings[:domain]}"
        %td= t('.will_create_conversation')
      %tr
        %td= link_to "{{project.permalink}}+task@#{Teambox.config.smtp_settings[:domain]}", "mailto:{{project.permalink}}+task@#{Teambox.config.smtp_settings[:domain]}"
        %td= t('.will_create_task')
  .clear
