%div{ :style => "margin:0;padding:0;display:inline" }
  %input{:name => 'utf8', :type => 'hidden', :value => '✓'}
  %input{:name => '_method', :type => 'hidden', :value => 'put'}

.field.text_area
  %a.micro_avatar.my_avatar
  .textarea
    %textarea{:cols => '40', :name => 'task[comments_attributes][0][body]', :placeholder => 'Define what needs to be done, assign this task to somebody.', :rows => '20', :autocomplete => 'off', :style => ''}
    .autocomplete{ :style => "display: none" }

.extra{ :style => "display: none" }
  {{#if task_list}}
  .field.text_field.hours_field{ :style => "display: none" }
    %label
      How many hours did you put into this task?
      %input{:id => 'task_comments_attributes_0_human_hours', :name => 'task[comments_attributes][0][human_hours]', :size => '30', :type => 'text'}
    %a{:href => 'http://help.teambox.com/faqs/advanced-features/time-tracking', :target => '_blank'} Learn more.
  {{/if}}

  .upload_area{ :style => "display: none" }
    %p Select a file to upload to Teambox
    %input{:id => 'upload_file', :name => 'task[comments_attributes][0][uploads_attributes][0][asset]', :type => 'file'}

  .actions
    .attach
      %span= t('comments.fields.attach')
      %a{:href => '#uploads', :class => 'attach_icon hoverable', :title => 'Attach a file'} Attachment
      .google_docs_attachment
        %a{ :href => "/google_docs", :rel => "facebox" }
          %img{:alt => 'Icon_6_document', :class => 'google_docs_logo', :src => '/images/google_docs/icon_6_document.gif'}
        .google_docs_attachment_form_area{ :'data-object-name' => "task[comments_attributes][0]" }
          .fields
          %ul.file_list
      {{#if is_task}}
      %a{:href => '#hours', :class => 'add_hours_icon hoverable', :title => 'Log hours'} Add hours to this task
      {{/if}}
      %a{:href => '#watchers', :class => 'add_watchers hoverable', :title => 'Notify people'} Watchers

    {{#if is_task}}
    .task_actions
      %label{:for => 'task_status'} Status
      %select#task_status{ :name => "task[status]" }
        <!-- TODO: Choose the right selected option -->
        %option{:value => '0'} new
        %option{:value => '1', :selected => 'selected'} open
        %option{:value => '2'} hold
        %option{:value => '3'} resolved
        %option{:value => '4'} rejected
      %label{:for => 'task_assigned_id'} Assigned to:
      %select#task_assigned_id{ :'data-assigned' => "{{assigned_id}}", :name => "task[assigned_id]" }
        %option Unassigned
      %label{:for => 'task_due_on'} Due date
      .date_picker
        %img{:alt => 'Calendar', :class => 'calendar_date_select_popup_icon', :src => '/images/calendar_date_select/calendar.gif'}
        %input{:id => 'task_due_on', :name => 'task[due_on]', :type => 'hidden'}
        %span{:class => 'localized_date'}
          %i No date assigned
    {{else}}
    %span.convert_to_task
      %a{:href => '#convert_to_task'} Convert to task
    {{/if}}

    %span.new{ :style => "display: none" }
      ← &nbsp;&nbsp; Select <b>Notify people</b> to send notifications for this conversation.

  .submit
    %span.help
      %a{:href => '/text_styles', :class => 'style_icon', :rel => 'facebox', :title => 'Formatting help'}
    %input{:id => 'task[comments_attributes][0]_submit', :name => 'commit', :type => 'submit', :value => 'Save'}
