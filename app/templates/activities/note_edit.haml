.activity
  {{#user}}
  <a href="{{note_url}}" class="micro_avatar" style="background: url({{micro_avatar_url}}) no-repeat"></a>
  {{/user}}
  .activity_block
    .date
      %time.timeago{ :'data-msec' => "{{ms updated_at}}", :pubdate => "true" }
        {{time_ago updated_at}}
    %p
      {{#user}}
      %a{ :href => "{{note_url}}" } {{full_name}}
      {{/user}}
      edited the note
      {{#target}}
      %a{ :href => "{{note_url}}" } {{name}}
      {{/target}}
      %span.project
        in 
        {{#target}}{{#page}}
        %a{ :href => "{{note_url}}" } {{name}}
        {{/page}}{{/target}}
        {{#project}}
        %a{ :href => "{{note_url}}" } ({{name}})
        {{/project}}
