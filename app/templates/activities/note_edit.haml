.activity
  {{#user}}
  <a href="{{user_url}}" class="micro_avatar" style="background: url({{micro_avatar_url}}) no-repeat"></a>
  {{/user}}
  .activity_block
    .date
      %time.timeago{ :'data-msec' => "{{ms updated_at}}", :pubdate => "true" }
        {{time_ago updated_at}}
    %p
      {{#user}}
      %a{ :href => "{{user_url}}" } {{full_name}}
      {{/user}}
      edited the note
      {{#target}}
      %a{ :href => "{{note_url}}" } {{name}}
      {{/target}}
      %span.project
        in 
        {{#target}}
        %a{ :href => "{{page_url page}}" }
          {{#page}}{{name}}{{/page}}
        {{/target}}
        {{#project}}
        %a{ :href => "{{project_url}}" } ({{name}})
        {{/project}}
