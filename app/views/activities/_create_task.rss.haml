.activity{ :class => "#{activity.action_type}" }
  .activity_icon{ :class => "activity_#{activity.target_type.to_s.underscore}" }
  = link_to activity.user.name, user_path(activity.user)
  = t(".#{activity.action_type}")
  = activity_project_link(activity.project,:after)
  = link_to task.task_list, project_task_list_path(task.task_list.project, task.task_list)
  &rarr;
  = link_to task, project_task_list_task_path(task.task_list.project, task.task_list, task)
  .clear