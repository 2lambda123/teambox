.user{:id => "user_#{user.id}"}
  .actions
    - unless @current_user == user
      %span= link_to t('.remove_from_project'), destroy_project_person_path(@current_project,user)
  = thumb_avatar(user)
  .text
    .name= user.name
    .login
      = user.login + ','
      = mail_to user.email, user.email
    .address
      = t('.formatted_address', :street => 'C/ Bonsoms, 21', :city => 'Barcelona', :country => 'Spain')
    .phone
      +34 661 939 945