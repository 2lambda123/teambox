.login.text_field
  = f.label :login, t('.login')
  = f.text_field :login
.name.text_field
  = f.label :name, t('.name')
  = f.text_field :name
.email.text_field
  = f.label :email, t('.email')
  = f.text_field :email
.password.text_field
  = f.label :password
  = f.password_field :password
.password.text_field
  = f.label :password_confirmation, 'Confirm Password'
  = f.password_field :password_confirmation
- unless user.new_record?
  .time_zone.text_field
    = f.label :time_zone, t('.time_zone')
    = f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :default => "Eastern Time (US & Canada)"
  .language.select
    = f.label :language, t('.language')
    = f.select :language, [['English', 'en']]