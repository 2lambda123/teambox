.task_header{ :id => "#{task_id(:edit_header,project,task_list,task)}" }
  = task_action_links(project,task_list,task)
  %h2
    = task_status(task.status)
    = task.name
  .assignment
    - if task.assigned?(current_user)
      = "Assigned to #{link_to task.assigned.user.name, user_path(current_user)}"
