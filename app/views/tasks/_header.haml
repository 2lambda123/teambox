.task_header{ :id => "#{task_id(:edit_header,project,task_list,task)}" }
  = task_action_links(project,task_list,task) unless task.archived
  %h2
    = task_status(task,true)
    = task.name
  .assignment
    - if task.assigned?(current_user)
      = t('.assigned_to', :user => link_to(task.assigned.user.name, user_path(current_user)))
