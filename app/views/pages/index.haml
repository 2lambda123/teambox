= page_column(@current_project, @pages)

- unless @pages.empty?
  #pages
    %h2= t('.pages_in_this_project')
    - @pages.each do |page|
      .page
        %h3= page_link(page)
        %p= page.description

- else
  #primer
    %p= t('.primer.empty')
    .box
      %h2= link_to t('.primer.create_first'), new_project_task_list_path(@current_project)
      %p= t '.primer.define1'
      %p= t '.primer.define2'
      %ul
        %li= t '.primer.item1'
        %li= t '.primer.item2'
        %li= t '.primer.item3'
        %li= t '.primer.item4'
      %p= t '.primer.footer1' 
      %p= t '.primer.footer2'
