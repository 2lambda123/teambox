%table.task_list{ :id => task_list_id(:with_archived_tasks,project,task_list) }
  %thead
    %tr
      %th{:colspan => 4}
        =comments_count(task_list,:content)
        = the_task_list_link(task_list)
  %tbody{ :id => task_list_id(:the_archived_tasks,project,task_list) }
    = list_tabular_tasks(project,task_list,task_list.tasks.archived)