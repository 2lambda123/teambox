<div class="global_navigation"><%  
render_tabnav :global, :generate_css => false do 

  if logged_in?
    add_tab do |t|
      t.named t('.settings')
      t.links_to settings_path
      t.highlights_on :controller => :users, :action => :edit
    end
    add_tab do |t|
      t.named t('.logout')
      t.links_to logout_path
    end
  else
    add_tab do |t|
      t.named t('.login')
      t.links_to login_path
      t.highlights_on :controller => :sessions, :action => :new
    end    
    add_tab do |t|
      t.named t('.signup')
      t.links_to signup_path
      t.highlights_on :controller => :users, :action => :new
    end
  end
  
end
%><div class="clear"></div></div>