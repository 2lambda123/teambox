= hidden_field_tag :original_controller, controller_name

.body.text_area
  = f.text_area :body
- unless show_hours == false
  %a.add_hours{:onclick => "this.hide();this.next('.hours').show();", |
    :style => (f.object.hours.nil? ? '' : 'display: none;') }
    + Hours
  .hours.text_field{:style => (f.object.hours.nil? ? 'display: none;' : '')}
    = f.label :hours
    = f.text_field :hours