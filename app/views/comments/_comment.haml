.comment{:id => "comment_#{comment.id}" }
  %p.actions{ :style => 'display: none' }
    %span
      = edit_comment_link(comment)
      = delete_comment_link(comment)

  =thumb_avatar(comment.user)
  .name
    = link_to comment.user.name, user_path(comment.user)
    = comment.created_at.strftime("%I:%M %p &mdash; %b %d %Y")
  .body
    = comment.body_html
  - if comment.uploads.count > 0
    .upload_list
      = list_uploads_inline(comment.uploads)
      %br
  .clear