!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en" }
  %head
    %meta{ :charset => "UTF-8" }
    %meta{ :'http-equiv' => "X-UA-Compatible", :content => "IE=edge" }
    = csrf_meta_tag
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %title= "Teambox settings"
    = include_stylesheets :application, :media => :screen
    = yield :stylesheet_includes
    = trimmer_include_tag
    = sprockets_include_tag
    = javascript_include_tag 'development' if Rails.env.development?
    = yield :js_includes
    = javascript_tag do
      = yield :js_templates
  %body{ :class => "#{location_name} #{I18n.locale} #{Rails.env} controller_#{controller.controller_name}" }
    #header_wrap
      = header
    #container.container
      .wrapper
        .content_wrap
          .content#content
            - show_flash
            = yield
        .column_wrap
          .column#column
            = render 'shared/user_navigation'
