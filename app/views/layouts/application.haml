!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en" }
  %head
    %meta{ 'http-equiv' => "content-type", :content => "text/html;charset=utf-8" }
    %title
      Teambox
    = stylesheet_link_tag 'application'
    = sprockets_include_tag

  %body{ :class => "#{location_name} #{I18n.locale}"}
    .container
      =header
      - if logged_in?
        = link_to 'Logout', logout_path
      - else
        = link_to 'Login', login_path
        = link_to 'Signup', signup_path
      =navigation(@current_project)
      .wrapper
        = if @current_project
          =project_navigation(@current_project)
        %div{ :class => "#{@content_for_column.nil? ? 'content_wrap_single' : 'content_wrap'}" }
          .content
            = yield
        -unless @content_for_column.nil?
          .column_wrap
            .column#column
              = yield :column
          .clear
      =footer