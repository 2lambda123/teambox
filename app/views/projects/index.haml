- content_for :column do
  = new_project_link
  = list_projects(@projects)
  .subscribe
    = link_to t('.subscribe'), user_rss_token(projects_path(:format => :rss))

- unless @pending_projects.empty?
  .invitations
    = list_pending_invites(@pending_projects)

- unless @activities.empty? and @projects.empty?
  %h2= t('.title')
  #activities
    = list_activities(@activities)
- else
  =project_primer