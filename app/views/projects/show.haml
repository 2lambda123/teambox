- if @pending_projects
  .invitations
    = list_pending_invites(@pending_projects)

= new_comment_form(@current_project, :message => t('.update_your_status'))

#activities
  = list_activities(@activities)
  
  
- content_for :column do
  .people_list
    %h2= t '.people_in_project'
    = list_people_statuses(@current_project.users)
    .invite_people
      = link_to t('.invite_people'), project_people_path(@current_project)
  .subscribe
    = link_to t('.subscribe'), project_path(@current_project, :format => :rss)
