<%=
unless @upload.new_record?
    update_page_tag do |page|
      page << "top.$('uploads_save').insert(#{{ :top => upload_save_tag('uploads[]',@upload) }.to_json});"
      page << "top.$('uploads_current').insert(#{{ :top => list_uploads_edit([@upload],@comment) }.to_json});"
      page << "top.$('uploads_current').show();"
      page << "top.$$('.upload_form').each(function(e){ e.hide(); })"
      page << "top.$('uploads_save').insert(#{{ :before => upload_form_params(@comment) }.to_json})"
    end
else
  update_page_tag do |page|  
    page << "top.$$('.upload_form').each(function(e){ e.hide(); })"
    page << "top.$('uploads_save').insert(#{{ :before => upload_form_params(@comment) }.to_json})"      
  end  
end
%>


