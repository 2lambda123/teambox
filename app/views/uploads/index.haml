- content_for :column do
  = add_upload_link
  = edit_side_upload_form(@current_project,Upload.new)

- unless @uploads.empty?
  #uploads
    =list_uploads(@current_project,@uploads)
  .clear
  
- else
  #primer
    %p= t('.primer.empty')
    .box
      %h2= link_to t('.primer.create_first'), new_project_task_list_path(@current_project)
      %p= t '.primer.define1'
      %p= t '.primer.define2'
      %ul
        %li= t '.primer.item1'
        %li= t '.primer.item2'
        %li= t '.primer.item3'
  
