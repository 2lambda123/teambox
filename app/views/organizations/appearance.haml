%h2=h @organization

- if @organization.is_admin? current_user
  - form_for @organization, :html => { :multipart => true } do |f|
    = f.error_messages
    = render 'organizations/appearance_fields', :f => f
    .submit
      = f.submit t('.submit')

- else
  %p= t('organizations.you_are_not_admin')

= render 'organizations/column'
